/* pages/startAudio/startAudio.wxss */
.start_audio {
  padding-top: 92rpx;
}
#myVideo {
  width: 100%;
  height: 400rpx;
}
.start_audio_content_head {
  display: flex;
  justify-content: space-between;
  background: #ffffff;
}
.head_left {
  display: flex;
  margin-top: 10rpx;
}
.head_image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  margin-left: 10rpx;
}
.work {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
}
.name {
  font-size: 25rpx;
  line-height: 40rpx;
}
.head_right {
  display: flex;
  align-self: center;
  margin-right: 50rpx;
  height: 50rpx;
}
.show_number_move_icon {
  width: 40rpx;
  height: 30rpx;
}
.show_number_icon {
  width: 40rpx;
  height: 40rpx;
}
.show_number {
  font-size: 25rpx;
  line-height: 40rpx;
  margin-right: 20rpx;
  color: #808080;
  margin-left: 10rpx;
}
.start_audio_content_foot {
  padding-top: 70rpx;
  padding-left: 20rpx;
  padding-bottom: 15rpx;
  background: #ffffff;
}
.work_content_text {
  font-size: 30rpx;
  line-height: 40rpx;
}
.score_content {
  width: auto;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: white;
}
.score {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.score_list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column
}
.score_data {
  display: flex;
  align-items: center;
}
.score_footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.score_result {
  display: flex;
  align-items: center;
}
.score_teacher {
  width: auto;
  padding: 20rpx;
  display: flex;
  flex-direction: column
}
.score_teacher_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.score_teacher_top_left {
  display: flex;
  align-items: center;
}
.teacher_image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.score_comment {
  color: #999999;
}