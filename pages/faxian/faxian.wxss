/* pages/faxian/faxian.wxss */
.faxian {
  display: flex;
  justify-content: space-between;
  align-content: flex-start;
  flex-wrap: wrap;
  padding-top: 92rpx;
}
.every_data {
  width: 50%;
  height: auto;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.data_content {
  width: 90%;
  height: 100%;
  border-radius: 20rpx;
  background-color: #ffffff;
  /* box-shadow: 1rpx 1rpx 5rpx; */
  /* margin: 20rpx 30rpx; */
}
.data_image {
  width: 100%;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  margin-bottom: 0rpx;
  /* height: 200rpx; */
  max-height: 200rpx;
}
.data_text {
  font-size: 30rpx;
  margin-left: 5%;
}
.work_name {
  margin-bottom: 1%;
  font-size: 33rpx;
}
.work_user {
  margin-bottom: 20rpx;
  font-size: 25rpx;
  color: #808080;
  margin-top: 20rpx;
}