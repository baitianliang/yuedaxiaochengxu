/* pages/dingdan/dingdan.wxss */
.dingdan {
  padding-top: 92rpx;
}
.order {
  font-size: 28rpx;
  margin: 20rpx 0rpx;
  padding: 20rpx 20rpx;
  width: auto;
  background-color: white;
  /* border-bottom: 1rpx solid #ccc; */
}
.order_center {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-top: 20rpx;
}
.order_name {
  width: 80%;
}
.order_footer {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-top: 10rpx;
}
.no_order {
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.no_order_img {
  width: 150rpx;
  height: 150rpx;
}
.no_order_title {
  margin-top: 20rpx;
  color: #808080;
}