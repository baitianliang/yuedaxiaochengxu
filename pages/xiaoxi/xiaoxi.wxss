/* pages/xiaoxi/xiaoxi.wxss */
.xiaoxi {
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-top: 92rpx;
}
.message {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.time {
  margin: 20rpx;
}
.b_b {
  width: 90%;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx 10rpx;
}
.title {
  font-weight: bold;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.content {
  font-size: 25rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.no_work {
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.no_work_img {
  width: 150rpx;
  height: 150rpx;
}
.no_work_title {
  margin-top: 20rpx;
  color: #808080;
}